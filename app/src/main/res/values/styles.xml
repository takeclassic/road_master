<resources>

    <style name="custom_spinner_style">
        <item name="android:divider">#adcd58</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarSize">@dimen/bar_height</item>
        <item name="android:actionBarSize">@dimen/bar_height</item>
    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarSize">@dimen/bar_height2</item>
        <item name="android:actionBarSize">@dimen/bar_height2</item>
        <item name="android:dropDownListViewStyle">@style/custom_spinner_style</item>
    </style>

    <style name="AppTheme3" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarSize">@dimen/bar_height3</item>
        <item name="android:actionBarSize">@dimen/bar_height3</item>
    </style>

</resources>
